@model IEnumerable<PaulaPachecoHairStyle.Models.Photo>

<h3>Fotos dos Procedimentos</h3>

@foreach (var photo in Model)
{
    <div class="photo-item">
        <img src="@Url.Content(photo.ImagemThumbnailUrl)" alt="Imagem do procedimento" class="img-thumbnail" />
        <h4 class="service-title">@photo.Name</h4>
        <p class="service-description-photo">@photo.Description</p>
    </div>
}
