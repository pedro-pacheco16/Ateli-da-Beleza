@model IEnumerable<PaulaPachecoHairStyle.Models.Procedure>

@{
    ViewData["Title"] = "List";
}


    <div class="container" style="margin-top: -30px;">
        <h2 class="text-center text-uppercase" style="color: #8B7355;">Nossos serviços</h2>
        <p class="text-center">Um salão de beleza ideal para quem procura adequar a imagem pessoal às suas principais necessidades, com assessoria especializada em um ambiente sofisticado e com atendimento personalizado. Solicite orçamento em nossa recepção.</p>
    </div>

<div class="row text-center" style="margin-top: 10px;">
@foreach (var procedure in Model)
{
            <div class="col-md-4 mb-4">
                <a asp-action="ListPhoto" asp-controller="Photo" asp-route-procedureId="@procedure.ProcedureId" title="Detalhes do procedimento" style="text-decoration: none; color: inherit;">
                    <div class="service-card">
                        <img src="~/@(procedure.CoverImageBase64)" alt="Imagem do procedimento" class="service-image rounded-circle">
                        <h4 class="service-title mt-3">@procedure.Name</h4>
                        <p class="service-description">@procedure.Description</p>
                    </div>
                </a>
            </div>
}
    </div>
